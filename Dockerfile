# Используем официальный PHP образ с CLI и встроенным сервером
FROM php:8.2-cli

# Устанавливаем рабочую директорию в контейнере
WORKDIR /app

# Копируем все файлы из твоего проекта в контейнер
COPY . /app

# Открываем порт 8080 (можно и другой, главное, чтобы совпадал с Render)
EXPOSE 8080

# Команда запуска встроенного PHP сервера на порту 8080
CMD ["php", "-S", "0.0.0.0:8080", "-t", "."]
